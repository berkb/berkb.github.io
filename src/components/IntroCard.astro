---
import Card from "./Card/index.astro";
import Button from "./Button.astro";
import { LINKS } from "../lib/constants";
import { Icon } from "astro-icon/components";
import Tooltip from "./Tooltip/index";
---

<Card colSpan="md:col-span-3" rowSpan="md:row-span-4">
  <div class="flex w-full h-full">
    <div class="flex flex-col justify-between md:max-h-[300px] gap-4">
      <div class="flex flex-col h-full">
        <span class="text-sm font-light m-0 text-gray-500">welcome</span  >
        <span class="m-0 font-light text-xl">
          Hi, I'm <h1 class="inline-flex"><b class="font-bold">Berk Belcioglu</b>, a Shopify Front End Developer</h1>, 
          dedicated to supporting international stores with their theme development needs for many years. 
          Prioritizing details and focusing on achieving accurate results quickly are my core principles.
        </span>
      </div>
      <div class="flex gap-4">
        <a href={LINKS.github} aria-label="github profile" target="_blank">
          <Button aria-label="github profile">
            <Icon name="ri:github-fill" class="h-6" />
            <span class="sr-only">GitHub Profile</span>
          </Button>
        </a>
        <a href={LINKS.linkedin} aria-label="linkeding profile" target="_blank">
          <Button aria-label="linkedin profile">
            <Icon name="ri:linkedin-box-fill" class="h-6" />
            <span class="sr-only">Linkedin Profile</span>
          </Button>
        </a>
        <a href={LINKS.twitter} aria-label="twitter profile" target="_blank">
          <Button aria-label="twitter profile">
            <Icon name="ri:twitter-fill" class="h-6" />
            <span class="sr-only">Twitter Profile</span>
          </Button>
        </a>
        <a href={LINKS.medium} aria-label="medium profile" target="_blank">
          <Button aria-label="medium profile">
            <Icon name="ri:medium-fill" class="h-6" />
            <span class="sr-only">Medium Profile</span>
          </Button>
        </a>
      </div>
    </div>
    <img
      width="300"
      height="300"
      src="/me.webp"
      class="w-auto max-h-[300px] select-none absolute right-[-110px] bottom-[-20px] z-[-1] opacity-50 md:opacity-100 md:relative md:right-auto md:bottom-auto md:z-auto pointer-events-none"
      alt="memoji of berk"
    />
  </div>
</Card>
